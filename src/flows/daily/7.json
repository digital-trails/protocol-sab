{
    "header_text": "Daily Survey",
    "header_icon": "assets/subtitle.png",
    "elements": [
        {
            "type": "Text",
            "has_variable": true,
            "text": "Why did you use ${global:daily_past_week_used}?"
        },
        {
            "type": "Buttons",
            "buttons": [
                "0::Craving",
                "1::Stress",
                "2::Anxiety",
                "3::Depression",
                "4::Availability",
                "5::Boredom",
                "6::Avoid withdrawal",
                "7::Others were using",
                "8::To treat pain"
            ],
            "selectable": true,
            "multiselect": true
        }
    ],
     "condition": [
        "global:daily_past_week_used",
        "!=",
        "None"
    ]
}